{
  "version": 2,
  "buildCommand": "cd client && npm ci && npm run build",
  "outputDirectory": "client/build",
  "installCommand": "npm install",
  "functions": {
    "api/shorten.js": {
      "runtime": "@vercel/node"
    },
    "api/my-urls.js": {
      "runtime": "@vercel/node"
    },
    "api/[shortCode].js": {
      "runtime": "@vercel/node"
    },
    "api/qr/[shortCode].js": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/api/shorten",
      "destination": "/api/shorten.js"
    },
    {
      "source": "/api/my-urls",
      "destination": "/api/my-urls.js"
    },
    {
      "source": "/api/qr/:shortCode",
      "destination": "/api/qr/[shortCode].js"
    },
    {
      "source": "/:shortCode([a-zA-Z0-9]{6})",
      "destination": "/api/[shortCode].js"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/client/build/index.html"
    }
  ]
}
