{
  "version": 2,
  "buildCommand": "cd client && npm ci && npm run build",
  "outputDirectory": "client/build",
  "installCommand": "npm install",
  "cleanUrls": true,
  "trailingSlash": false,
  "routes": [
    {
      "src": "/api/shorten",
      "dest": "/api/shorten.js"
    },
    {
      "src": "/api/my-urls",
      "dest": "/api/my-urls.js"
    },
    {
      "src": "/api/qr/([a-zA-Z0-9]{6})",
      "dest": "/api/qr/[shortCode].js?shortCode=$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "/client/build/static/$1"
    },
    {
      "src": "/manifest.json",
      "dest": "/client/build/manifest.json"
    },
    {
      "src": "/favicon.ico",
      "dest": "/client/build/favicon.ico"
    },
    {
      "src": "/([a-zA-Z0-9]{6})$",
      "dest": "/api/[shortCode].js?shortCode=$1"
    },
    {
      "src": "/(auth|dashboard|analytics).*",
      "dest": "/client/build/index.html"
    },
    {
      "src": "/",
      "dest": "/client/build/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/index.html"
    }
  ]
}
