{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/build",
  "installCommand": "npm install",
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "/sitemap.xml",
      "headers": {
        "Content-Type": "application/xml"
      }
    },
    {
      "src": "/robots.txt",
      "dest": "/robots.txt",
      "headers": {
        "Content-Type": "text/plain"
      }
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "/favicon.ico", 
      "dest": "/favicon.ico"
    },
    {
      "src": "/api/shorten",
      "dest": "/api/shorten.js"
    },
    {
      "src": "/api/my-urls",
      "dest": "/api/my-urls.js"
    },
    {
      "src": "/api/analytics/([a-zA-Z0-9]{6})",
      "dest": "/api/analytics/[shortCode].js?shortCode=$1"
    },
    {
      "src": "/api/qr/([a-zA-Z0-9]{6})",
      "dest": "/api/qr/[shortCode].js?shortCode=$1"
    },
    {
      "src": "/([a-zA-Z0-9]{6})$",
      "dest": "/api/[shortCode].js?shortCode=$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
