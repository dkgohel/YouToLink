{
  "version": 2,
  "buildCommand": "cd client && npm ci && npm run build",
  "outputDirectory": "client/build",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/api/shorten",
      "destination": "/api/shorten.js"
    },
    {
      "source": "/api/my-urls", 
      "destination": "/api/my-urls.js"
    },
    {
      "source": "/api/analytics/:shortCode",
      "destination": "/api/analytics/[shortCode].js"
    },
    {
      "source": "/api/qr/:shortCode",
      "destination": "/api/qr/[shortCode].js"
    },
    {
      "source": "/:shortCode([a-zA-Z0-9]{6})",
      "destination": "/api/[shortCode].js"
    },
    {
      "source": "/(.*)",
      "destination": "/client/build/index.html"
    }
  ]
}
