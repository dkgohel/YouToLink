{
  "version": 2,
  "buildCommand": "cd client && npm ci && npm run build",
  "outputDirectory": "client/build",
  "installCommand": "npm install",
  "framework": null,
  "routes": [
    {
      "src": "/api/shorten",
      "dest": "/api/shorten.js"
    },
    {
      "src": "/api/qr/([a-zA-Z0-9-_]{3,20})",
      "dest": "/api/qr/[shortCode].js?shortCode=$1"
    },
    {
      "src": "/api/test",
      "dest": "/api/test.js"
    },
    {
      "src": "/(auth|dashboard|analytics).*",
      "dest": "/client/build/index.html"
    },
    {
      "src": "/static/(.*)",
      "dest": "/client/build/static/$1"
    },
    {
      "src": "/([a-zA-Z0-9-_]{3,20})$",
      "dest": "/api/[shortCode].js?shortCode=$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/index.html"
    }
  ]
}
